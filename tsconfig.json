{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@remixify/native/*": [
        "packages/native/*"
      ],
      "@remixify/react-query/*": [
        "packages/react-query/*"
      ]
    }
  },
  "include": [
    "packages/**/*.ts"
  ]
}
